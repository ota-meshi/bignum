{
  "name": "formula-literal",
  "version": "0.0.0",
  "description": "Write formulas with template literals.",
  "type": "module",
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.js",
      "default": "./lib/index.mjs"
    }
  },
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prebuild": "npm run -s clean",
    "build": "npm run bundle",
    "bundle": "tsup",
    "clean": "rimraf .nyc_output lib coverage",
    "lint": "eslint . --ext .js,.ts,.json",
    "eslint-fix": "npm run lint -- --fix",
    "format:docs": "prettier README.md --write",
    "test": "mocha --loader=ts-node/esm \"tests/src/**/*.mts\" --reporter dot --timeout 60000",
    "cover": "c8 --reporter=lcov npm run test",
    "debug": "mocha --loader=ts-node/esm/transpile-only \"tests/src/**/*.mts\" --reporter dot",
    "update-snap": "mocha --loader=ts-node/esm/transpile-only \"tests/src/**/*.mts\" --reporter dot --update",
    "update-snap-cov": "c8 --reporter=lcov npm run update-snap",
    "preversion": "npm run lint && npm test",
    "update-visitor": "node --loader=ts-node/esm/transpile-only scripts/update-visitor.mts && eslint src/visitor.mts --fix",
    "prerelease": "npm run clean && npm run build",
    "release": "changeset publish"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ota-meshi/formula-literal.git"
  },
  "keywords": [
    "formula",
    "template-literal"
  ],
  "author": "Yosuke Ota",
  "funding": "https://github.com/sponsors/ota-meshi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ota-meshi/formula-literal/issues"
  },
  "homepage": "https://github.com/ota-meshi/formula-literal#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@ota-meshi/eslint-plugin": "^0.15.2",
    "@svitejs/changesets-changelog-github-compact": "^1.1.0",
    "@types/chai": "^4.3.0",
    "@types/estree": "^1.0.0",
    "@types/mocha": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "c8": "^8.0.1",
    "chai": "^4.3.4",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-json-schema-validator": "^5.0.0",
    "eslint-plugin-jsonc": "^2.5.0",
    "eslint-plugin-n": "^17.0.0",
    "eslint-plugin-node-dependencies": "^0.12.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-regexp": "^2.0.0",
    "mocha": "^10.1.0",
    "mocha-chai-jest-snapshot": "^1.1.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.4.0",
    "tsup": "^8.0.0",
    "typescript": "~5.4.0"
  }
}
